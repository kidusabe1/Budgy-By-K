# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token

# Google / Gemini
GOOGLE_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Apple Pay webhook
APPLE_PAY_USER_KEY=your-telegram-user-id
APPLE_PAY_CHAT_ID=your-telegram-chat-id
APPLE_PAY_DB_DIR=./user_data

# Firestore toggle (true for Cloud Run, false for local SQLite)
USE_FIRESTORE=false

# Cloud Scheduler secret (must match X-Scheduler-Secret header)
SCHEDULER_SECRET=generate-a-random-string-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
