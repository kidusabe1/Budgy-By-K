# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# Apple Pay Webhook
APPLE_PAY_USER_KEY=your-telegram-user-id
APPLE_PAY_BOT_TOKEN=your-bot-token
APPLE_PAY_CHAT_ID=your-chat-id

# Google
GOOGLE_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Backend: set to "true" for Firestore, omit or "false" for SQLite
USE_FIRESTORE=true

# Cloud Scheduler secret (must match the X-Scheduler-Secret header)
SCHEDULER_SECRET=generate-a-random-string-here

# Logging
LOG_LEVEL=INFO
